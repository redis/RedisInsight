{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "esnext", "WebWorker"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "paths": {
      "uiSrc/*": ["garnetinsight/ui/src/*"],
      "apiSrc/*": ["garnetinsight/api/src/*"],
      "src/*": ["garnetinsight/api/src/*"],
      "desktopSrc/*": ["garnetinsight/desktop/src/*"],
      "tests/*": ["garnetinsight/ui/__tests__/*"]
    }
  },
  "include": [
    "garnetinsight/ui/src/**/*",
    "garnetinsight/ui/index.tsx",
    "garnetinsight/ui/indexElectron.tsx",
    "garnetinsight/desktop/**/*",
    "garnetinsight/ui/vite-env.d.ts",
    "jest.config.cjs",
    "tests/playwright/**/*"
  ],
  "exclude": [
    "garnetinsight/desktop/dll/*",
    "./garnetinsight/api",
    "**/main.prod.js",
    "**/renderer.prod.js",
    "./release",
    "./node_modules",
    "**/node_modules",
    "./dist",
    "**/dist"
  ]
}
